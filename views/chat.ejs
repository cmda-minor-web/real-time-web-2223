<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head.ejs') %>
	</head>
	<body>
		<ul>
			<% for (const cocktail of cocktails) { %>
			<li><%= cocktail.name %></li>
			<% } %>
		</ul>
		<main id="chatpage">
			<ul class="chat_header">
				<li>Game Pin: XSODS</li>
				<li id="user__count">Users</li>
			</ul>
			<div id="game">
				<p id="singular__player">Waiting for more players...</p>

				<div id="game__start">
					<canvas id="canvas" width="400" height="400"></canvas>
				</div>
			</div>
			<div id="chat">
				<ul id="messages"></ul>
				<form id="form" action="">
					<input id="input" autocomplete="off" />
					<button><img src="/icons/send.svg" alt="send message" /></button>
				</form>
			</div>
		</main>
		<script src="/socket.io/socket.io.js"></script>
		<script src="/scripts/chat.js"></script>
		<script src="/scripts/cocktails.js"></script>
	</body>
</html>
